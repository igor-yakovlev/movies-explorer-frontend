{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["MainApi.js", "MoviesApi.js"],
    "rules": {
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]}
    ],
      "max-len": ["error", { "code": 140 }],
      "no-console": "off",
      "no-underscore-dangle": ["error", {"allow": ["_id"]}],
      "react/prop-types": ["off"]
    }
}
